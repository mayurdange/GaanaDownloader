<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="off">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
        	<ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%msg%n" />
        </Console>
        <File name="FileLoggerAll" filename="GaanaDownloader_All.log" immediateFlush="false" append="false">
        	<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}:%M- %msg%n" />
        </File>
        <File name="FileLoggerInfo" filename="GaanaDownloader_Info.log" immediateFlush="false" append="false">
        	<ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        	<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}:%M- %msg%n" />
        </File>        
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="Console" />         
            <AppenderRef ref="FileLoggerInfo" />
            <AppenderRef ref="FileLoggerAll" />
        </Root>
    </Loggers>
</Configuration>